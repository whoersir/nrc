# CloudBase 环境变量配置模板
# 复制此文件为 .env.local 并填入实际值

# CloudBase 环境配置
TCB_ENV_ID=wxg-8gafv6m97fd71cde
TCB_REGION=ap-shanghai

# 服务器端认证（用于 Node.js SDK）
# 获取密钥: https://console.cloud.tencent.com/cam/capi
# 注意: 这些是腾讯云 API 密钥，不是 CloudBase AccessKey
TCB_SECRET_ID=your_secret_id_here
TCB_SECRET_KEY=your_secret_key_here

# 数据库配置（可选）
DATABASE_URL=mysql://user:password@host:port/database

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# 天气API配置（LuckyColaAI）
# 从 http://luckycola.com.cn 个人中心获取 appKey 和 uid
NEXT_PUBLIC_WEATHER_APP_KEY=your_app_key_here
NEXT_PUBLIC_WEATHER_UID=your_uid_here
# 地区编码示例：110114=北京昌平区
NEXT_PUBLIC_WEATHER_ADCODE=110114

# 日志配置
LOG_LEVEL=debug
